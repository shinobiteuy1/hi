<link rel="stylesheet" href="~/css/Login.css" />

<div class="login-box-body">
    <div class="login-box-msg" id="titletext" >Welcome to my world</div>
    <form method="post">
        <div class="form-group has-feedback">
            <input type="email" class="form-control" placeholder="Email" />
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <!--<span asp-validation-for="#" class="help-block"></span>-->
        </div>

        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Password" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <!--<span asp-validation-for="#" class="text-danger"></span>-->
        </div>

        <div class="row">
            <div class="col-xs-8">
                <div class="form-check icheck">
                    <label>
                        <input type="checkbox" /> Remember Me
                    </label>
                </div>
            </div>
        </div> <!-- row -->

        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div>
        <div style="text-align:center; margin-top:15px;">- OR -</div>

        <div style="text-align:center; font-size:25px; margin-top:10px;">
            <a href="#">Register</a>
        </div>
        @Html.AntiForgeryToken()

    </form>
</div>


